<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Your Record</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #6a4f4b;
            text-align: center;
            font-size: 28px;
            margin-bottom: 30px;
            font-family: 'Cursive', sans-serif;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-size: 18px;
        }

        table th, table td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        table th {
            background-color: #6a4f4b;
            color: white;
        }

        table tbody tr:hover {
            background-color: #f9f9f9;
        }

        .table-buttons a {
            font-size: 16px;
            font-weight: 700;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            margin: 0 5px;
        }

        .delete-btn {
            background-color: #e74c3c;
        }

        .edit-btn {
            background-color: #f39c12;
        }

        .add-data-btn {
            display: block;
            font-size: 18px;
            font-weight: 700;
            color: #6a4f4b;
            text-decoration: none;
            text-align: center;
            padding: 15px;
            background-color: #ffd700;
            border-radius: 8px;
            margin-top: 30px;
            width: 200px;
            margin: 0 auto;
            transition: background-color 0.3s ease;
        }

        .add-data-btn:hover {
            background-color: #f39c12;
        }

        img {
            max-width: 100px;
            height: auto;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Your Added Data</h2>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Book Name</th>
                    <th>Book Price</th>
                    <th>Book Pages</th>
                    <th>Book Author</th>
                    <th>Book Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.map((val, index) => { %>
                    <tr>
                        <td><%= ++index %></td>
                        <td><%= val.name %></td>
                        <td><%= val.price %></td>
                        <td><%= val.pages %></td>
                        <td><%= val.author %></td>
                        <td><img src="<%= val.image %>" alt="<%= val.name %>"></td>
                        <td class="table-buttons">
                            <a href="/deleteRecord?deleteId=<%= val.id %>" class="delete-btn">Delete</a>
                            <a href="/editRecord?editId=<%= val.id %>" class="edit-btn">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <a href="/add" class="add-data-btn">Click to Add More Data</a>
    </div>
</body>

</html>
