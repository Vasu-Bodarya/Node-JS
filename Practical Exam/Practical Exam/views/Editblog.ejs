<%- include('Header') %>

<div class="page-wrapper py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4 text-primary fw-bold">Modify Blog Contents</h2>
                        <form action="/updateBlog" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label fw-semibold">Title:</label>
                                <input type="text" class="form-control shadow-sm" id="title" name="title"
                                    value="<%= single.title %>" required placeholder="Enter Title">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label fw-semibold">Description:</label>
                                <textarea class="form-control shadow-sm" id="description" name="description" required
                                    rows="6" placeholder="Enter Description"><%= single.description %></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="author" class="form-label fw-semibold">Author:</label>
                                <input type="text" class="form-control shadow-sm" id="author" name="author"
                                    value="<%= single.author %>" required placeholder="Enter Author Name">
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label fw-semibold">Price:</label>
                                <input type="number" class="form-control shadow-sm" id="price" name="price"
                                    value="<%= single.price %>" required placeholder="Enter Price">
                            </div>

                            <div class="mb-3">
                                <label for="quantity" class="form-label fw-semibold">Quantity:</label>
                                <input type="number" class="form-control shadow-sm" id="quantity" name="quantity"
                                    value="<%= single.quantity %>" required placeholder="Enter Quantity">
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label fw-semibold">Upload Image:</label>
                                <input class="form-control shadow-sm" type="file" id="image" name="image" accept="image/*">
                                <% if (single.image) { %>
                                    <div class="mt-3 text-center">
                                        <img src="<%= single.image %>" alt="Current Image" class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
                                    </div>
                                <% } %>
                            </div>

                            <input type="hidden" name="editid" value="<%= single._id %>">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">Update Blog</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('Footer') %>

<style>
/* Page Styling */
.page-wrapper {
    min-height: 100vh;
    display: flex;
    align-items: center;
}

/* Card Styling */
.card {
    background: #fff;
    border-radius: 12px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

/* Button Styling */
.btn-primary {
    background-color: #007bff;
    border: none;
    transition: all 0.3s ease-in-out;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: scale(1.05);
}

/* Input Styling */
.form-control {
    border-radius: 8px;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #ddd;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
}
</style>
